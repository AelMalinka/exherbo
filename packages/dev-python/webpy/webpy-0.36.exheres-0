require distutils

MY_PNV="web.py-${PV}"
SUMMARY="web framework focusing on simplicity and a direct mapping between concept and code"
DESCRIPTION="web.py is a web framework for python that is as simple as it is powerful. web.py is in the public domain; you can use it for whatever purpose with absolutely no restrictions."
DOWNLOADS="http://webpy.org/static/${MY_PNV}.tar.gz"
HOMEPAGE="http://webpy.org/"

LICENCES="public-domain"
SLOT="0"
PLATFORMS="~amd64 ~x86"

DEPENDENCIES="
	build:
		dev-python/setuptools
	suggestion:
		dev-python/flup [[ description = [ Add support for running web apps with lighttpd ] ]]
		dev-python/mysql-python [[ description = [ Add support for connecting to and querying mysql database ] ]]
		dev-python/psycopg2 [[ description = [ Add support for connecting to and querying a postgresql database ] ]]
		dev-python/pysqlite [[ description = [ Add support for connecting to and querying a sqlite database ] ]]
		www-servers/mod_wsgi [[ description = [ Add support for running web apps with apache through mod_wsgi. mod_wsgi is an apache module wich implements Web Server Gateway Interface ] ]]"

WORK="${WORKBASE}/${MY_PNV}"
