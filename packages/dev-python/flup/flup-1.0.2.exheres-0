require distutils

SUMMARY="A collection of WSGI modules"
DESCRIPTION="WSGI (Web Server Gateway Interface) is an interface between webservers and web applications for python, based on CGI.
flup is a collection of modules which implement WSGI on one side and another common protocol (currently AJP, SCGI, and FastCGI) on the other side. Allowing a webserver to speak WSGI through flup as long as it can interface to flup"
DOWNLOADS="http://www.saddi.com/software/flup/dist/${PNV}.tar.gz"
HOMEPAGE="http://trac.saddi.com/flup"

LICENCES="BSD-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"

DEPENDENCIES="
	build:
		dev-python/setuptools"
